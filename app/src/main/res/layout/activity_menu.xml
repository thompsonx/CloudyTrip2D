<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.tamz2.pan0068.cloudytrip2d.MenuActivity"
    android:background="#0000ff">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:clickable="true"
        android:contextClickable="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="323dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imgIntro"
                android:src="@drawable/intro" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:weightSum="1">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Player:"
                    android:id="@+id/txtPlayer"
                    android:textColor="#ffffff" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/editPlayer"
                    android:layout_weight="1"
                    android:text="plane01"
                    android:inputType="text" />
            </LinearLayout>

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="PLAY"
                android:id="@+id/buttonStart"
                android:layout_marginBottom="50dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Best Score"
                android:id="@+id/txtBestScore"
                android:textColor="#ffffff"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                android:gravity="center" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Player: plane01"
                android:id="@+id/txtPlayerName"
                android:textColor="#ffffff"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Score: 101"
                android:id="@+id/txtScore"
                android:textColor="#ffffff"
                android:layout_marginTop="10dp" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
